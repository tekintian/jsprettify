{
  "name": "jsprettify",
  "version": "1.0.0",
  "description": "Prettify JavaScript code",
  "main": "index.js",
  "bin": {
    "jsprettify": "./index.js"
  },
  "scripts": {
    "prettify": "node index.js",
    "build": "pkg index.js --no-bytecode --public --publicPackages '*' --targets node18-linux-x64,node18-win-x64,node18-macos-x64,node18-macos-arm64 --output dist/jsprettify",
    "build:all": "bash build.sh"
  },
  "dependencies": {
    "prettier": "^3.8.0",
    "chrome-remote-interface": "^0.33.0"
  },
  "optionalDependencies": {
    "puppeteer-core": "^24.35.0"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  },
  "pkg": {
    "scripts": "index.js",
    "assets": [],
    "targets": [
      "node18-linux-x64",
      "node18-win-x64",
      "node18-macos-x64",
      "node18-macos-arm64"
    ],
    "outputPath": "dist"
  }
}
